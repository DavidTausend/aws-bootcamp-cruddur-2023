#!/usr/bin/env python3

import boto3
import sys
  
attrs = {
  'endpoint_url': 'http://localhost:8000'
}
ddb = boto3.resource('dynamodb',**attrs)
table_name = 'cruddur-messages'

table = ddb.Table(table_name)
response = table.scan()

print('======')
print(response)

items = response['Items']
for item in items:
    print(item)